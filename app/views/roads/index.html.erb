<p id="notice"><%= notice %></p>

<h1>Roads</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Dep time</th>
      <th>Path</th>
      <th>Capacity</th>
      <th>Allow delta dist</th>
      <th>Allow delta time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roads.each do |road| %>
      <tr>
        <td><%= road.user_id %></td>
        <td><%= road.dep_time %></td>
        <td><%= road.path %></td>
        <td><%= road.capacity %></td>
        <td><%= road.allow_delta_dist %></td>
        <td><%= road.allow_delta_time %></td>
        <td><%= link_to 'Show', road %></td>
        <td><%= link_to 'Edit', edit_road_path(road) %></td>
        <td><%= link_to 'Destroy', road, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

